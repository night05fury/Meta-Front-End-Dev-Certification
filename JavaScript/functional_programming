//funtional programming for Coursera OOP Javascript

//OOP Javascript 1
var purchase1={
    shoes:100,stateTax:1.2,
        totalPrice: function(){
            var calculation=purchase1.shoes* purchase1.stateTax;
            console.log('Total price', calculation);
    }
}
    purchase1.totalPrice();

//OOP Javascript 2
var purchase2={
    shoes:50,stateTax:1.2,
        totalPrice: function(){
            var calculation=purchase2.shoes* purchase2.stateTax;
            console.log('Total price', calculation);
    }
}
    purchase2.totalPrice();

    // better OOP Form by using the 'this' keyword
    // the code is optimised and has better performance/
var purchase1={
    shoes:100,stateTax:1.2,
        totalPrice: function(){
            var calculation=this.shoes* this.stateTax;
            console.log('Total price', calculation);
    }
}
    purchase1.totalPrice();
  
